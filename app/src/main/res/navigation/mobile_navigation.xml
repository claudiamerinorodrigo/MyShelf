<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/bookShelfListFragment"
    tools:ignore="ExtraText">

    <fragment
        android:id="@+id/nav_home"
        android:name="es.upm.etsisi.cumn.grupoc.myshelf.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="es.upm.etsisi.cumn.grupoc.myshelf.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="es.upm.etsisi.cumn.grupoc.myshelf.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />
    <fragment
        android:id="@+id/bookAddFragment"
        android:name="es.upm.etsisi.cumn.grupoc.myshelf.ui.home.AddBook.AddBookFragment"
        android:label="fragment_add_book"
        tools:layout="@layout/fragment_add_book">
        <argument
            android:name="myArg"
            app:argType="es.upm.etsisi.cumn.grupoc.myshelf.ui.bookshelf.shelfitem.EBookShelfItem" />
    </fragment>

    <fragment
        android:id="@+id/bookShelfListFragment"
        android:name="es.upm.etsisi.cumn.grupoc.myshelf.BookShelfListFragment"
        android:label="fragment_book_shelf_list"
        tools:layout="@layout/fragment_book_shelf_list" >
        <action
            android:name="CustomAction"
            android:id="@+id/action_bookShelfListFragment_to_bookLisitingFragment"
            app:destination="@id/bookLisitingFragment">
        </action>
        <action
            android:name="AddBookAction"
            android:id="@+id/action_bookShelfListFragment_to_bookAddFragment"
            app:destination="@id/bookAddFragment" />
    </fragment>
    <fragment
        android:id="@+id/bookLisitingFragment"
        android:name="es.upm.etsisi.cumn.grupoc.myshelf.ui.bookshelf.BookListing.BookLisitingFragment"
        android:label="@string/menu_book_list"
        tools:layout="@layout/fragment_book_lisiting">
        <argument
            android:name="myArg"
            app:argType="es.upm.etsisi.cumn.grupoc.myshelf.ui.bookshelf.shelfitem.BookShelfItemModel" />
    </fragment>
</navigation>